<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:loc="clr-namespace:LogService.Client.Localisation;assembly=LogService.Client.Localisation"
			 mc:Ignorable="d"
			 x:Class="LogService.Maui.View.YesNoPageView"
			 Title="{Binding Title}">
	
	<ContentPage.Content>
		<ScrollView Margin="20">
			<StackLayout>
				<Label Text="{Binding Message}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition />
						<ColumnDefinition />
					</Grid.ColumnDefinitions>

					<Button Command="{Binding YesCommand}" Text="{x:Static loc:CommonLoc.Yes}" Grid.Column="0" Margin="1"
							HorizontalOptions="FillAndExpand" BackgroundColor="#00375a" TextColor="#ffffff" />
					<Button Command="{Binding NoCommand}" Text="{x:Static loc:CommonLoc.No}" Grid.Column="1" Margin="1"
							HorizontalOptions="FillAndExpand" BackgroundColor="#00375a" TextColor="#ffffff" />
				</Grid>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>