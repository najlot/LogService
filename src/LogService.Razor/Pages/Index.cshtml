@page
@model LogService.Razor.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="row">
            <div class="col-12">
                <h1>Welcome, @User.Identity.Name!</h1>
            </div>
        </div>

        @if (string.IsNullOrEmpty(Model.ServiceToken))
        {
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h2>Create Service Token</h2>
                        </div>
                        <div class="card-body">
                            <form method="post" asp-page-handler="GenerateToken">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label for="source" class="form-label">Source</label>
                                        <input type="text" class="form-control" id="source" name="source" asp-for="TokenInput.Source" />
                                    </div>
                                    <div class="col-md-3">
                                        <label for="validUntil" class="form-label">Valid Until</label>
                                        <input type="date" class="form-control" id="validUntil" name="validUntil" asp-for="TokenInput.ValidUntil" />
                                    </div>
                                    <div class="col-md-3 d-flex align-items-end">
                                        <button type="submit" class="btn btn-primary">Get Service Token</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h2>Service Token</h2>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label class="form-label fw-bold">Token</label>
                                <textarea class="form-control" readonly rows="5">@Model.ServiceToken</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2>Settings</h2>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="SaveSettings">
                            <div class="row">
                                <div class="col-md-3">
                                    <label for="logRetentionDays" class="form-label">Log Retention Days</label>
                                    <input type="number" class="form-control" id="logRetentionDays" asp-for="SettingsInput.LogRetentionDays" />
                                </div>
                                <div class="col-md-3 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="d-grid gap-2">
                    <a href="/LogMessages" class="btn btn-success btn-lg">View Log Messages</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <h1>Welcome to LogService!</h1>
                <p>Please register or login to continue.</p>
                <div class="d-grid gap-2">
                    <a href="/Account/Login" class="btn btn-primary">Login</a>
                    <a href="/Account/Register" class="btn btn-outline-primary">Register</a>
                </div>
            </div>
        </div>
    }
</div>